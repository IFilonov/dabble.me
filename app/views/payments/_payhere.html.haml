:javascript
  function payhere(plan) {
    PayHere.launch({
      embedURL: "https://app.payhere.co/dabble-me/dabble-me-pro-" + plan,
      disableCustomer: "yes",
      customerName: "#{raw(current_user.full_name&.escape_javascript)}",
      customerEmail: "#{current_user.email}",
      customFields: {
        dabble_id: "#{current_user.id}"
      },
      onSuccess: function(payment) {
        setTimeout(function() { location.reload(); }, 2000);
      }
    });
  }
