<% @entries.each do |entry| %>
<% if params[:only_images] == "true" %>
<%= entry.image_url_cdn %>
<% else %>
<%= entry.date.strftime("%Y-%m-%d")%>

<%== CGI::unescape_html(ActionController::Base.helpers.strip_tags(entry.sanitized_body)) %>

<% if entry.image.present? %>
<%= "[IMAGE: #{entry.image_url_cdn}]" %>

<% end %>
<% end %>
<% end %>
