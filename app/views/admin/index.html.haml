- title ("Admin Dashboard")

.row.s-admin-container
  .col-md-12
    %h3
      Admin Dashboard

  .col-md-12
    %hr

  .col-md-12
    .row
      .col-md-3
        %strong All Entries
      - all_count = @entries.count
      .col-md-2
        =link_to admin_path(entries: "all") do
          %strong #{number_with_delimiter(all_count)}        
      .col-md-3
        %form{action:"/search?admin=true"}
          %input{type: "text", name: "search[term]", placeholder: "Search entries", style: "padding: 3px 8px; margin-top:-10px; margin-bottom: 5px;"}
          %input{type: "hidden", name: "admin", value: "yes"}
    .row
      .col-md-3
        %strong All Entries with Photos
      - photos_count = @entries.only_images.count
      .col-md-2
        =link_to admin_path(entries: "all", photos: true) do
          %strong #{number_with_delimiter(photos_count)}
      .col-md-2
        - if all_count > 0
          %strong #{number_to_percentage(photos_count.to_f/all_count.to_f*100, precision: 0)}

  .col-md-12
    %hr
  .col-md-12
    .row
      .col-md-3
        %strong Free
      .col-md-2
        %strong #{number_with_delimiter(User.free_only.count)}
    .row
      .col-md-3
        %strong Pro
      .col-md-2
        %strong #{number_with_delimiter(User.pro_only.count)}
    .row
      .col-md-3
        %strong Monthly
      .col-md-2
        %strong #{number_with_delimiter(User.monthly.count)}
    .row
      .col-md-3
        %strong Yearly
      .col-md-2
        %strong #{number_with_delimiter(User.yearly.count)}
    .row
      .col-md-3
        %strong Forever
      .col-md-2
        %strong #{number_with_delimiter(User.forever.count)}        

  .col-md-12
    %hr

  .col-md-3
    %strong Total Emails Sent
  .col-md-3
    - emails_sent_total = @users.sum(:emails_sent)
    %strong= number_with_delimiter(emails_sent_total)
  .clearfix
  .col-md-3
    %strong Total Emails Received
  .col-md-2
    - emails_received_total = @users.sum(:emails_received)
    %strong= number_with_delimiter(emails_received_total)
  .col-md-2
    - if emails_sent_total > 0
      %strong #{number_to_percentage(emails_received_total.to_f/emails_sent_total.to_f*100, precision: 0)}

  .col-md-12
    %hr      

  .col-md-12
    .row
      .col-md-3
        %strong All Users
      - all_users_count = @users.count
      .col-md-2
        %strong #{number_with_delimiter(all_users_count)}
      .col-md-7
        %form
          %input{type: 'text', name: 'email', placeholder: 'Filter by Email', value: "#{params[:email]}", style: 'padding: 3px 8px; margin-top:-10px; margin-bottom: 5px;'}
          %input{type: 'text', name: 'user_key', placeholder: 'Filter by User Key', value: "#{params[:user_key]}", style: 'padding: 3px 8px; margin-top:-10px; margin-bottom: 5px;'}
          %input{type: 'submit', name: 'submit', value: 'Search'}

      - if all_users_count > 0
        %br
        %br
        %table.table.table-bordered.table-striped.well.sortable
          %thead
            %tr
              %th{style: 'width: 3%', data: { mainsort: 'true', defaultsort: 'desc' }} ID
              %th{style: 'width: 10%', data: { firstsort: 'asc' }} Key
              %th{style: 'width: 25%', data: { firstsort: 'asc' }} Email
              %th{style: 'width: 20%', data: { firstsort: 'asc' }} Name
              %th{style: 'width: 8%', data: { firstsort: 'asc' }} Entries
              %th{style: 'width: 8%', data: { firstsort: 'asc' }} Images
              %th{style: 'width: 8%', data: { firstsort: 'asc' }} Paid
              %th{style: 'width: 18%', data: { firstsort: 'asc' }} Plan
          %tbody
            -@user_list.each do |user|
              %tr
                %td=user.id
                %td=user.user_key
                %td=link_to user.email, admin_path(entries: "all", user_id: user.id)
                %td=user.full_name
                - user_entries_count = user.entries.count
                - user_images_count = user.entries.only_images.count
                %td{data: { value: "#{user_entries_count}" }}=number_with_delimiter(user_entries_count)
                %td{data: { value: "#{user_images_count}"}}=number_with_delimiter(user_images_count)
                %td=user.payments.sum(:amount)
                %td=user.plan
        .center
          = paginate @user_list

.clearfix